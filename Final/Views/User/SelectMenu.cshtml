
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/User.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <script>
        function getMenu() {
            $.ajax({
                type: 'POST',
                url: '/User/GetMenu2',
                contentType: "application/json; charset=utf-8",
                dataType: 'json',
                success: function (data) {
                    console.log(data);
                    var tdata = $("#tblMenu tbody");
                    tdata.empty();
                    for (var i = 0; i < data.length; i++) {
                        var trow = "<tr>" +
                            "<td>" + data[i].Itemsname + "</td>" +
                            "<td>" + data[i].price + "</td>" +

                            "<td>" + "<img src=" + data[i].Itemimage + " width='70' height='70'/>" + "</td>"
                        "</tr>";
                        tdata.append(trow);
                    }
                },
                error: function (res) {
                    alert('Something Went Wrong');
                    console.log(res);
                }
            });
        }




        function addToCart() {
            var dat = {
                Fooditems: $("#Text1").val(),
                Price: $("#Text2").val(),
                Quantity: $("#Text3").val()
            }
            $.ajax({
                type: 'POST',
                url: '/User/AddToCart2',
                data: JSON.stringify(dat),
                contentType: "application/json; charset=utf-8",
                dataType: 'json',
                success: function (data) {
                    console.log(data);
                    alert("Added To Cart Successfully");
                },
                error: function (res) {
                    alert('Something Went Wrong');
                    console.log(res);
                }
            });
        }
    </script>
    <meta name="viewport" content="width=device-width" />
