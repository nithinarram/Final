    <script>

        $(document).ready(function () {
            $('#tblMenu tbody').on('click', 'tr', function () {
                var tableData = $(this).children("td").map(function () {
                    return $(this).text();
                }).get();
                //var td = tableData[0];
                //alert(td);
                var Item = tableData[0];
                var Price = tableData[1];
